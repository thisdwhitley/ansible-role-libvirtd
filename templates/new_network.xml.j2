<network>
  <name>{{ libvirt_network.name }}</name>
  <forward mode='{{ libvirt_network.forward_mode | default("nat") }}'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <bridge name='{{ libvirt_network.bridge_name }}' stp='on' delay='0'/>
  <ip address='{{ libvirt_network.ip_address }}' netmask='{{ libvirt_network.netmask | default("255.255.255.0") }}'>
  </ip>
</network>